<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.iwaki.mysampleapplication.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button13"
                android:onClick="onKeyStoreSampleTapped"
                android:text="GoToAndroidKeyStoreSample" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button4"
                android:layout_centerHorizontal="true"
                android:onClick="onGoToListViewSampleTapped"
                android:text="GoToListViewSample" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button3"
                android:onClick="onGoToSQLiteSampleTapped"
                android:text="GoToSQLiteSample" />

            <Button
                android:id="@+id/goToAsyncTaskSample"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onGoToAsyncTaskSampleTapped"
                android:text="GoToAsyncTaskSample" />

            <Button
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/button3"
                android:layout_centerHorizontal="true"
                android:onClick="onGoAoTempTestTapped"
                android:text="GoToTempTest" />

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button6"
                android:layout_centerHorizontal="true"
                android:onClick="onGoToLocationSample1Tapped"
                android:text="GoToLocationSample1" />

            <Button
                android:id="@+id/goToIntentServiceSample"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onGoToIntentServiceSampleTapped"
                android:text="GoToIntentServiceSample" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout"
                android:onClick="onGoToMethodTimeCheckTapped"
                android:text="GoToMethodTimeCheck" />

            <Button
                android:id="@+id/button11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout"
                android:onClick="onNotificationSample1Tapped"
                android:text="GoToNotificationSample1" />

            <Button
                android:id="@+id/button12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button11"
                android:layout_centerHorizontal="true"
                android:onClick="onWiFiSampleTapped"
                android:text="GoToWiFiSample" />

            <Button
                android:id="@+id/button13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button12"
                android:onClick="onHttpURLConnectionSample1Tapped"
                android:text="GoToHttpURLConnectionSample1" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
